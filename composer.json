{
    "name": "agency-orgo/string-translations",
    "description": "A Statamic addon for managing string translations",
    "autoload": {
        "psr-4": {
            "AgencyOrgo\\StringTranslations\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AgencyOrgo\\StringTranslations\\Tests\\": "tests"
        }
    },
    "require": {
        "php": "^8.3",
        "statamic/cms": "^6.0"
    },
    "require-dev": {
        "orchestra/testbench": "^10.0",
        "phpunit/phpunit": "^12.3"
    },
    "license": "MIT",
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "allow-plugins": {
            "pixelfear/composer-dist-plugin": true
        }
    },
    "extra": {
        "statamic": {
            "name": "String Translations",
            "description": "Manage string translations with database storage and fallback support"
        },
        "laravel": {
            "providers": [
                "AgencyOrgo\\StringTranslations\\ServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
